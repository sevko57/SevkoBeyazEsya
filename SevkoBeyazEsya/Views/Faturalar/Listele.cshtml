@model IEnumerable<SevkoBeyazEsya.Models.Faturalar>

@{
    ViewBag.Title = "Listele";
    Layout = "~/Views/Shared/_LayoutSubelerPanel.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Faturalar</h4>
                        <div class="table-responsive">
                            <table class="table table-dark">

                                <thead>
                                    <tr>
                                        <th> Fatura ID </th>
                                        <th> Seri No </th>
                                        <th> Sıra No </th>
                                        <th> Tarih </th>
                                        <th> Vergi Dairesi </th>
                                        <th> Saat </th>
                                        <th> Teslim Eden </th>
                                        <th> Teslim Alan </th>
                                        <th> Toplam Fiyat </th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@item.Fatura_id</td>
                                            <td>@item.FaturaSeri_no</td>
                                            <td>@item.FaturaSira_no</td>
                                            <td>@item.Tarih</td>
                                            <td>@item.Vergi_dairesi</td>
                                            <td>@item.saat</td>
                                            <td>@item.Teslim_eden</td>
                                            <td>@item.Teslim_alan</td>
                                            <td>@item.ToplamFiyat</td>
                                            <td>@Html.ActionLink("Düzenle", "/Duzenle", new { faturaid = item.Fatura_id })</td>
                                            <td>@Html.ActionLink("Sil", "/Sil", new { faturaid = item.Fatura_id })</td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>