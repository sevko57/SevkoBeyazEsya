@model SevkoBeyazEsya.Models.Yonetici

@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="main-panel">
        <div class="content-wrapper">
            @Html.HiddenFor(x=>x.Yonetici_id)
            <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-description">Yönetici Düzenle</p>
                            <form class="forms-sample">
                                <div class="form-group">
                                    <label for="exampleInputName1">Ad</label>
                                    @Html.TextBoxFor(x => x.Yonetici_adi, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail3">Şifre</label>
                                    @Html.TextBoxFor(x => x.sifre, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword4">Yetki</label>
                                    @Html.TextBoxFor(x => x.yetki, new { @class = "form-control" })
                                </div>
                                <button type="submit" class="btn btn-primary mr-2">Düzenle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
