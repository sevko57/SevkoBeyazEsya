@model IEnumerable<SevkoBeyazEsya.Models.Yonetici>

@{
    ViewBag.Title = "Listele";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yöneticiler</h4>
                        <div class="table-responsive">
                            <table class="table table-dark">

                                <thead>
                                    <tr>
                                        <th> Yönetici ID </th>
                                        <th> Yönetici Adı </th>
                                        <th> Yönetici Şifre </th>
                                        <th> Yönetici Yetki </th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@item.Yonetici_id</td>
                                            <td>@item.Yonetici_adi</td>
                                            <td>@item.sifre</td>
                                            <td>@item.yetki</td>

                                            <td>@Html.ActionLink("Düzenle", "/Duzenle", new { yonetici_id = item.Yonetici_id })</td>
                                            <td>@Html.ActionLink("Sil", "/Sil", new { yonetici_id = item.Yonetici_id })</td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
