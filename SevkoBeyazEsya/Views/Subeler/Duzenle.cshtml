@model SevkoBeyazEsya.Models.Subeler

@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="main-panel">
        <div class="content-wrapper">
            @Html.HiddenFor(x=>x.Sube_id)
            <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-description">Şube Düzenle</p>
                            <form class="forms-sample">
                                <div class="form-group">
                                    <label for="exampleInputName1">Ad</label>
                                    @Html.TextBoxFor(x => x.Sube_Adi, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail3">Şehir</label>
                                    @Html.TextBoxFor(x => x.sehir, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword4">Email</label>
                                    @Html.TextBoxFor(x => x.e_mail, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword4">Telefon</label>
                                    @Html.TextBoxFor(x => x.Telefon_Numarasi, new { @class = "form-control" })
                                </div>
                                <button type="submit" class="btn btn-primary mr-2">Düzenle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}