@model IEnumerable<SevkoBeyazEsya.Models.Subeler>

@{
    ViewBag.Title = "Listele";
    Layout = "~/Views/Shared/_LayoutSubelerPanel.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Departmanlar</h4>
                        <div class="table-responsive">
                            <table class="table table-dark">

                                <thead>
                                    <tr>
                                        <th> Şube ID </th>
                                        <th> Şube Adı </th>
                                        <th> Şube Şehir </th>
                                        <th> Şube Email </th>
                                        <th> Şube Telefon Numarası </th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@item.Sube_id</td>
                                            <td>@item.Sube_Adi</td>
                                            <td>@item.sehir</td>
                                            <td>@item.e_mail</td>
                                            <td>@item.Telefon_Numarasi</td>

                                            <td>@Html.ActionLink("Düzenle", "/Duzenle", new { subeid = item.Sube_id })</td>
                                            <td>@Html.ActionLink("Sil", "/Sil", new { subeid = item.Sube_id })</td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
