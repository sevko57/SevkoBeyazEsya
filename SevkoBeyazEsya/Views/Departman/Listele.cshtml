@model IEnumerable<SevkoBeyazEsya.Models.Departman>

@{
    ViewBag.Title = "Listele";
    Layout = "~/Views/Shared/_LayoutSubelerPanel.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Departmanlar</h4>
                        <div class="table-responsive">
                            <table class="table table-dark">

                                <thead>
                                    <tr>
                                        <th> Departman ID </th>
                                        <th> Departman Adı </th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@item.Departman_id</td>
                                            <td>@item.Departman_adi</td>
                                            
                                            <td>@Html.ActionLink("Düzenle", "/Duzenle", new { departmanid = item.Departman_id })</td>
                                            <td>@Html.ActionLink("Sil", "/Sil", new { departmanid = item.Departman_id })</td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
