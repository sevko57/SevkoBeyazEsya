@model IEnumerable<SevkoBeyazEsya.Models.Satisler>

@{
    ViewBag.Title = "Listele";
    Layout = "~/Views/Shared/_LayoutSubelerPanel.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Satışlar</h4>
                        <div class="table-responsive">
                            <table class="table table-dark">

                                <thead>
                                    <tr>
                                        <th> Satış ID </th>
                                        <th> Ürün ID </th>
                                        <th> Personel ID </th>
                                        <th> Şube ID </th>
                                        <th> Kategori ID </th>
                                        <th> Tarih </th>
                                        <th> Adet </th>
                                        <th> Fiyat </th>
                                        <th> Toplam Tutar </th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@item.Satis_id</td>
                                            <td>@item.Urun_id</td>
                                            <td>@item.Personel_id</td>
                                            <td>@item.Sube_id</td>
                                            <td>@item.Kategori_id</td>
                                            <td>@item.Tarih</td>
                                            <td>@item.Adet</td>
                                            <td>@item.Fiyat</td>
                                            <td>@item.ToplamTutar</td>
                                            <td><a href="/Satislar/Getir/@item.Satis_id">Düzenle</a></td>
                                            <td><a href="/Satislar/Sil/@item.Satis_id">Sil</a></td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
