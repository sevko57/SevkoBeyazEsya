@model IEnumerable<SevkoBeyazEsya.Models.Urunler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    
    <div class="col-12 col-sm-6 col-md-12 col-xl-6">
        @foreach (var item in Model)
        {
            <div class="single-product-wrapper">
                <!-- Product Image -->
                <div class="product-img">
                    <img src="@item.Urun_Gorsel" alt="">
                </div>

                <!-- Product Description -->
                <div class="product-description d-flex align-items-center justify-content-between">
                    <!-- Product Meta Data -->
                    <div class="product-meta-data">
                        <div class="line"></div>
                        <p class="product-price">₺@item.Urun_satisfiyat</p>
                        <a href="">
                            <h6></h6>
                        </a>
                    </div>
                    <!-- Ratings & Cart -->
                    <div class="ratings-cart text-right">
                        <div class="ratings">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                        </div>
                        <div class="cart">
                            <a href="cart.html" data-toggle="tooltip" data-placement="left" title="Ürünü İncele"><img src="~/assets/img/core-img/cart.png" alt=""></a>
                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
</div>

